<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.qhit.lh.grsb.wyl.t8.bean.Emp" table="tb_emp">
		<id name="eid" column="eid" type="integer">
			<generator class="native">

			</generator>
		</id>

		<property name="ename" column="ename" type="string"></property>
		<property name="sex" column="sex" type="string"></property>
		<property name="birth" column="birth" type="string"></property>
		<property name="deptid" column="deptid" type="integer" insert="false" update="false"></property>

		<one-to-one name="userinfo" class="com.qhit.lh.grsb.wyl.t8.bean.Userinfo" cascade="all"></one-to-one>

		<many-to-one name="dept" class="com.qhit.lh.grsb.wyl.t8.bean.Dept" column="deptid" fetch="join" ></many-to-one>
	</class>
</hibernate-mapping>
